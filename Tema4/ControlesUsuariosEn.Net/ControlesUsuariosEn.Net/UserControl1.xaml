        <Rectangle x:Name="barra" Stroke="Black" Fill="White" Grid.Column="1" Margin="-5,78,-5,145"/>
        <Rectangle x:Name="progreso" Stroke="Black" Fill="#FFE29898"   Margin="0,78,62,0" Height="26" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBox x:Name="textBox_Texto" HorizontalAlignment="Left" Margin="0,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="textBox_TextChanged" OpacityMask="Black" Grid.Column="1" Height="18"/>
        <Rectangle HorizontalAlignment="Left" Height="27" Margin="0,222,0,0" Stroke="Black" VerticalAlignment="Top" Width="301" Fill="White" OpacityMask="Black" Grid.Column="1"/>
        <Rectangle x:Name="progreso_Texto" MaxWidth="225" HorizontalAlignment="Left" Height="27" Margin="0,222,0,0" Stroke="Black" VerticalAlignment="Top" Width="98" Fill="#FFC9E298" OpacityMask="Black" Grid.Column="1" RenderTransformOrigin="0.657,0.663"/>
    </Grid>
</UserControl>
